    <Style TargetType="{x:Type local:GridLoading}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GridLoading}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" >
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin=".5,.5">
                            <Grid.Resources>
                                <Style x:Key="RectangleStyle" TargetType="Rectangle">
                                    <Setter Property="Width" Value="9"/>
                                    <Setter Property="Height" Value="9"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="RenderTransformOrigin" Value=".5,.5"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource Sb}"/>
                                </EventTrigger>
                            </Grid.Triggers>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <WrapPanel Grid.Row="0" Margin="2,2,2,0">
                                <Rectangle x:Name="R7"  Style="{StaticResource RectangleStyle}" Fill="{Binding Foreground,RelativeSource={RelativeSource TemplatedParent}}">
                                    <Rectangle.RenderTransform>
